<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_pick_image_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/dialog_pick_image_camera"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:theme="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/dialog_pick_image_gallery"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:theme="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/dialog_pick_image_cancel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:text="@string/cancel"
            android:textColor="@color/colorPrimary"
            android:theme="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="onClick"/>
    </LinearLayout>
</android.support.v7.widget.CardView>