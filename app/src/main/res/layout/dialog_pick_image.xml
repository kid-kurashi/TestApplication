<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_pick_image_title"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="@string/pick_image" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_pick_camera" />

        <TextView
            android:id="@+id/dialog_pick_image_camera"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical|start"
            android:onClick="onClick"
            android:paddingStart="72dp"
            android:paddingLeft="72dp"
            android:text="@string/camera"
            android:textAlignment="gravity"
            android:textAllCaps="false" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_pick_gellery" />

        <TextView
            android:id="@+id/dialog_pick_image_gallery"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical|start"
            android:onClick="onClick"
            android:paddingStart="72dp"
            android:paddingLeft="72dp"
            android:text="@string/gallery"
            android:textAlignment="gravity"
            android:textAllCaps="false" />
    </FrameLayout>

    <Button
        android:id="@+id/dialog_pick_image_cancel"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        android:onClick="onClick"
        android:text="@string/cancel"
        android:textColor="@color/colorPrimary"
        android:theme="@style/Widget.AppCompat.Button.Borderless" />
</LinearLayout>